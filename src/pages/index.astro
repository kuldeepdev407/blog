---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
const posts = (await getCollection("blog"))
  .filter((value) => value.data.published)
  .sort((a, b) => b.data.published_at.valueOf() - a.data.published_at.valueOf())
  .slice(0, 10);

const author = await getCollection("author");
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .posts {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        gap: 1rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
        margin-top:1rem
      }

      .posts li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      .posts li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      .description{
        margin: 0;
        color: rgb(var(--gray));
      }
      .posts li a:hover h5,
      .posts li a:hover .date {
        color: rgb(var(--accent));
      }
      @media (max-width: 720px) {
        .posts {
          gap: 0.5em;
        }
        .posts li {
          width: 100%;
          /* text-align: center; */
        }
        
      }
    </style></head
  >

  <body>
    <Header />
    <main>
      <center><h1>+_+</h1></center>
      <p>
        Hi Kuldeep here this is my blog site. Here i write about all the thinks
        from my life to my career. This website can contain some post where i am
        just representing my opinion on things.
      </p>
      <p>
        My post are also availble at:
        <ul>
          <li>
            For long story:- <a href="https://medium.com/@kuldeepdev407"
              >medium.com</a
            >
          </li>
          <li>
            For more technical & short post:- <a
              href="https://dev.to/kuldeepdev407">dev.to</a
            >
          </li>
        </ul>
      </p>
      <h2>Recent Post's</h2>
      <ul class="posts">
        {
          posts.map((post) => (
            <li>
              <a href={`/blog/${post.slug}/`}>
                <h5 class="title">{post.data.title}</h5>
                <p class="date">
                  <FormattedDate date={post.data.published_at} /> -{" "}
                  {post.data.author.map((value) => {
                    for (let i = 0; i < author.length; i++) {
                      if (author[i].id == value) {
                        return author[i].data.name;
                      }
                    }
                    return "";
                  })}
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
    <Footer />
  </body>
</html>
